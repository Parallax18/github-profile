{
  "compilerOptions": {
    //other rules
    "baseUrl": "src",
    
    "paths": {
      "@components/*": ["./components/*"],
      "@helpers/*": ["./helpers/*"], 
      "@assets/*": ["./assets/*"],
      "@features/*": ["./features/*"],
      "@firebase/*": ["./firebase/*"],
      "@hoc/*": ["./hoc/*"],
      "@pages/*": ["./pages"],
      "@services/*": ["./services"]
    },

    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}